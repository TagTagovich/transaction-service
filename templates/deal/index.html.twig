{% extends 'base.html.twig' %}

{% block title %}Список сделок{% endblock %}

{% block body %}
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-hover table-bordered table-striped mb-0">
        <thead>
            <tr>
                <th>Номер</th>
                <th>Сумма</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Статус</th>
            </tr>
        </thead>
                <tbody>
                {% for deal in deals %}
                    <tr>
                        <td>{{ deal.number }}</td>
                        <td>{{ deal.sum }}</td>
                        <td>{{ deal.email }}</td>
                        <td>{{ deal.phone }}</td>
                        <td>{{ deal.status }}</td>

                    </tr>
                {% endfor %}
                </tbody>
        </table>
    </div>


{% endblock %}
